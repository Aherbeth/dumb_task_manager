<%- contentFor('body') %> <% data.map((el)=> { %>
<p class="task">
  Task Number <%= el.id %> <br />
  <%= el.title %><br />
  <%= el.description %><br />
  <a href="/tasks/remove?taskId=<%= el.id %>&userId=<%=userId%>">supprimer</a>
</p>

<% }) %>
<br />
<br />
<br />
<br />
<div class="add_task">
  <form action="/tasks?userId=<%=userId%>" method="POST">
    <p>Add a task</p>
    <label for="title">task title</label
    ><input type="text" name="title" /><br />
    <label for="description">task description</label
    ><input type="text" name="description" /><br />
    <label for="completion">task completed ?</label
    ><input type="checkbox" name="completion" /><br />
    <button type="submit">Add Task !</button>
  </form>
</div>
