<header class="bg-white shadow">
  <nav class="container mx-auto px-4 py-3">
    <div class="flex justify-between items-center">
      <div class="flex items-center">
        <a href="/" class="text-xl font-bold text-gray-800">DTM</a>
      </div>

      <div class="flex items-center space-x-4">
        <% if(typeof userId !== 'undefined' && userId) { %>
        <a
          href="/tasks?userId=<%=userId%>"
          class="text-gray-600 hover:text-gray-900"
          >Mes tâches</a
        >
        <a href="/logout" class="text-gray-600 hover:text-gray-900"
          >Déconnexion</a
        >
        <% } else { %>
        <a href="/login" class="text-gray-600 hover:text-gray-900">Connexion</a>
        <a href="/register" class="text-gray-600 hover:text-gray-900"
          >Inscription</a
        >
        <% } %>
      </div>
    </div>
  </nav>
</header>
